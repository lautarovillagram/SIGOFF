<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/fldMainDomain"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Dominio"
            android:inputType="text" />

        <EditText
            android:id="@+id/fldMainId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="NÂ° Licencia"
            android:inputType="number"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnMainLoad"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Cargar"
            app:iconTint="#03A9F4" />

        <EditText
            android:id="@+id/fldMainGetDom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="Dominio a buscar"
            android:inputType="text"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/btnMainGetDom"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Buscar" />

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>